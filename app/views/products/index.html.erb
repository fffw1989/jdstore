  <style>
  .carousel-inner > .item {
    -webkit-transition: -webkit-transform 0.3s ease-in-out;
    -o-transition: -o-transform 0.3s ease-in-out;
    transition: transform 0.3s ease-in-out;
  }
  </style>
</head>
<body>

<div id="myCarousel" class="carousel slide">
	<!-- 轮播（Carousel）指标 -->
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
		<li data-target="#myCarousel" data-slide-to="2"></li>
	</ol>

	<!-- 轮播（Carousel）项目 -->
	<div class="carousel-inner">
		<div class="item active">
		    <img src="https://ws3.sinaimg.cn/large/006tNc79gy1fhq9g5326yj30zh0etqen.jpg" alt="First slide" class="center-block" style="width:1280px; height:480px">
		</div>
		<div class="item">
		    <img src="https://ws3.sinaimg.cn/large/006tNc79gy1fhq9g5326yj30zh0etqen.jpg" alt="Second slide" class="center-block" style="width:1280px; height:480px">
		</div>
		<div class="item">
		    <img src="https://ws3.sinaimg.cn/large/006tNc79gy1fg3q1lidm8j30zk0k01as.jpg" alt="Third slide" class="center-block" style="width:1280px; height:480px">
		</div>
	</div>
	<!-- 轮播（Carousel）导航 -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">‹</a>
  	<a class="carousel-control right" href="#myCarousel" data-slide="next">›</a>
</div>

<!-- 控制按钮 -->
<div style="text-align:center; margin-top:10px;">
  <span class="slide-one">
    <img src="https://ws3.sinaimg.cn/large/006tNc79gy1fhq9g5326yj30zh0etqen.jpg" style="width:89px; height:50px">&nbsp;
  </span>
  <span class="slide-two">
    <img src="https://ws3.sinaimg.cn/large/006tNc79gy1fhq93mpb10j302h01eq30.jpg">&nbsp;
  </span>
  <span class="slide-three">
    <img src="https://ws2.sinaimg.cn/large/006tNc79gy1fg4k4xdy7ij302h01emx8.jpg">&nbsp;
  </span>
</div>

<script>
	$(function(){
		// 初始化轮播
		$(".start-slide").click(function(){
			$("#myCarousel").carousel('cycle');
		});
		// 停止轮播
		$(".pause-slide").click(function(){
			$("#myCarousel").carousel('pause');
		});
		// 循环轮播到上一个项目
		$(".prev-slide").click(function(){
			$("#myCarousel").carousel('prev');
		});
		// 循环轮播到下一个项目
		$(".next-slide").click(function(){
			$("#myCarousel").carousel('next');
		});
		// 循环轮播到某个特定的帧
		$(".slide-one").click(function(){
			$("#myCarousel").carousel(0);
		});
		$(".slide-two").click(function(){
			$("#myCarousel").carousel(1);
		});
		$(".slide-three").click(function(){
			$("#myCarousel").carousel(2);
		});
    $('.carousel').carousel({
				interval: 4000
		});
	});
</script>
</body>



